{
  "name": "vscode-rgss-scripts",
  "displayName": "RGSS Scripts",
  "version": "0.1.1",
  "description": "Open and edit Scripts.rvdata2 in VS Code",
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/hyrious/vscode-rgss-scripts.git"
  },
  "publisher": "hyrious",
  "main": "./extension.js",
  "browser": "./bundle.js",
  "scripts": {
    "clean": "rimraf extension.js bundle.js",
    "compile": "esbuild extension.ts --inject:zlib.js --bundle --platform=node --packages=external --outfile=extension.js",
    "compile:browser": "esbuild extension.ts --inject:zlib-browser.js --bundle --format=cjs --external:vscode --outfile=bundle.js --minify --sourcemap --sources-content=false",
    "vscode:prepublish": "npm run compile && npm run compile:browser"
  },
  "contributes": {
    "commands": [
      {
        "command": "rgss.open",
        "title": "Open Scripts.rvdata2",
        "category": "RGSS Scripts"
      },
      {
        "command": "rgss.close",
        "title": "Close Scripts.rvdata2",
        "category": "RGSS Scripts"
      },
      {
        "command": "rgss.insert",
        "title": "New Script",
        "category": "RGSS Scripts",
        "icon": "$(file-add)"
      },
      {
        "command": "rgss.delete",
        "title": "Delete",
        "category": "RGSS Scripts",
        "icon": "$(trash)"
      },
      {
        "command": "rgss.rename",
        "title": "Rename",
        "category": "RGSS Scripts",
        "icon": "$(edit)"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "rgss.insert",
          "when": "view == rgss.scripts",
          "group": "inline"
        },
        {
          "command": "rgss.delete",
          "when": "view == rgss.scripts",
          "group": "inline"
        },
        {
          "command": "rgss.rename",
          "when": "view == rgss.scripts",
          "group": "inline"
        }
      ],
      "commandPalette": [
        {
          "when": "explorerResourceIsRoot",
          "command": "rgss.close",
          "group": "navigation"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "rgss.scripts",
        "contents": "[Open Scripts.rvdata2](command:rgss.open)"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "rgss.scripts",
          "name": "Scripts"
        }
      ]
    }
  },
  "activationEvents": [
    "workspaceContains:**/Scripts.rvdata2",
    "onLanguage:rvdata2",
    "onFileSystem:rgss",
    "onStartupFinished"
  ],
  "dependencies": {
    "@hyrious/marshal": "^0.2.5",
    "pako": "^2.1.0"
  },
  "devDependencies": {
    "@hyrious/rimraf": "^0.1.0",
    "@types/node": "18.x",
    "@types/vscode": "^1.75.0",
    "esbuild": "^0.18.18"
  },
  "engines": {
    "vscode": "^1.75.0"
  }
}
